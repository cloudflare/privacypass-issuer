{
	"name": "pp-issuer",
	"version": "0.1.0",
	"type": "module",
	"main": "dist/worker.mjs",
	"private": true,
	"scripts": {
		"build": "tsc && node scripts/cli.js build",
		"deploy:production": "wrangler deploy --no-bundle --env production",
		"dev": "wrangler dev --env production --test-scheduled",
		"format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"lint": "eslint src && prettier --check '*.{json,js}' 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
		"test": "npm run build && node --experimental-vm-modules --no-warnings node_modules/.bin/jest"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"typescript",
			"prettier"
		]
	},
	"devDependencies": {
		"@cloudflare/blindrsa-ts": "^0.1.0",
		"@cloudflare/workers-types": "4.20231025.0",
		"@types/jest": "29.5.2",
		"dotenv": "16.1.3",
		"esbuild": "0.17.19",
		"eslint": "8.41.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-config-typescript": "3.0.0",
		"git-rev-sync": "3.0.2",
		"jest": "29.5.0",
		"jest-environment-miniflare": "2.14.0",
		"jest-runner-eslint": "2.0.0",
		"prettier": "2.8.8",
		"sade": "1.8.1",
		"ts-jest": "29.1.0",
		"wrangler": "3.15.0"
	},
	"dependencies": {
		"@cloudflare/privacypass-ts": "^0.4.0",
		"@sentry/cli": "^2.18.1",
		"@sentry/types": "^7.28.1",
		"promjs": "^0.4.2",
		"toucan-js": "^3.3.1",
		"typescript": "5.0.4"
	}
}
